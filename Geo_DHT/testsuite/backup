NAME = test_runner

CXX= g++
LDFLAGS= -L /usr/local/lib/libPoco* -lcppunit

OBJS = ipResolver.o

SRC = $(wildcard *.cpp)
OBJ = $(patsubst %.cpp, %.o, $(SRC))

.PHONY: clean test

$(NAME): $(OBJ)
	$(CXX) -o $(NAME) $(LDFLAGS) $(LDFLAGS)

test:
	@echo Running tests:
	@./$(NAME)

clean:
	rm *.o $(EXEC)

-include depend